@Model IEnumerable<team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br />  
<a asp-action="Create" class="btn btn-outline-youtube">Create Team</a>
@foreach (var team in Model)
{
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Striped Table</h4>
                <p class="card-description">
                    Add class <code>.table-striped</code>
                </p>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
             xdu                    </th>
                                <th>
                                    Full Name
                                </th>
                                <th>
                                    Job
                                </th>

                                <th>
                                    Actions
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="py-1">
                                    <img src="~/assets/img/team/@team.Photo" alt="image" />
                                </td>
                                <td>
                                    @team.FullName
                                </td>
                                <td>
                                    @team.Job
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@team.Id"  class="btn btn-primary"> <i class="mdi mdi-information-outline style=" color:white">Detail</i></a>
                                        <a asp-action="Update" asp-route-id="@team.Id" class="btn btn-warning"> <i class="mdi mdi-grease-pencil style=" color:white">Update</i></a>
                                        <a asp-action="Delete" asp-route-id="@team.Id" class="btn btn-danger"> <i class="mdi mdi-delete style="color:white">Delete</i></a>
                                </td>

                            </tr>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

}


